<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.maric.vlajko.hercules.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Home fragment"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:gravity="center"/>
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.maric.vlajko.hercules.AppActivity">


        <ImageView
            android:id="@+id/backgroundImage"
            android:background="#FFF"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/autum_image_desc" />
        <RelativeLayout
            android:background="#607D8B"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/toolBar"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:background="#FFFFFF"
                android:id="@+id/addNumber1"
                android:textColor="#000000"
                android:text="Neki tekst"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                />
            <TextView
                android:background="#FFFFFF"
                android:id="@+id/addNumber2"
                android:textColor="#000000"
                android:text="Neki tekst DVA"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp" />

            <TextView
                android:background="#607D8B"
                android:id="@+id/screenTitle"
                android:textColor="#FFFFFF"
                android:text="Calculate insulin intake."
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/calculate"
                android:text="@string/calculate"
                android:layout_margin="10dp"
                android:layout_alignTop="@+id/addNumber2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#CFD8DC"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:gravity="left"
            >
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:layout_gravity="center"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5">
                    <Button
                        android:background="@android:color/transparent"
                        android:textColor="#FFA726"
                        android:layout_weight="4"
                        android:id="@+id/firstButton"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="@string/buton1text" />
                    <TextView
                        android:id="@+id/textField1"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="00.0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000"></LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5">
                    <Button
                        android:background="@android:color/transparent"
                        android:textColor="#FFA726"
                        android:layout_weight="4"
                        android:id="@+id/secondButton"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="@string/buton1text" />
                    <TextView
                        android:id="@+id/textField2"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="00.0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000"></LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5">
                    <Button
                        android:background="@android:color/transparent"
                        android:textColor="#FFA726"
                        android:layout_weight="4"
                        android:id="@+id/thirdButton"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="@string/buton1text" />
                    <TextView
                        android:id="@+id/textField3"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="00.0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000"></LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5">
                    <Button
                        android:background="@android:color/transparent"
                        android:textColor="#FFA726"
                        android:layout_weight="4"
                        android:id="@+id/fourthButton"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="@string/buton1text" />
                    <TextView
                        android:id="@+id/textField4"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="00.0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000"></LinearLayout>
                <LinearLayout
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5">
                    <Button
                        android:background="@android:color/transparent"
                        android:textColor="#FFA726"
                        android:layout_weight="4"
                        android:id="@+id/fifthButton"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="@string/buton1text" />
                    <TextView
                        android:id="@+id/textField5"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="00.0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000"></LinearLayout>
                <LinearLayout
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5">
                    <Button
                        android:background="@android:color/transparent"
                        android:textColor="#FFA726"
                        android:layout_weight="4"
                        android:id="@+id/sixthButton"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="@string/buton1text" />
                    <TextView
                        android:id="@+id/textField6"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="00.0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000"></LinearLayout>
                <LinearLayout
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5">
                    <Button
                        android:background="@android:color/transparent"
                        android:textColor="#FFA726"
                        android:layout_weight="4"
                        android:id="@+id/seventhButton"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="@string/buton1text" />
                    <TextView
                        android:id="@+id/textField7"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="00.0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>




            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
